<div class="jumbotron">
	<h1>Discover your new favorite podcast...</h1>
</div>

<div class="container">

	<div class="row row-space-2">
		<% @podcasts.each do |podcast| %>

			<div class="col-md-4">
				<div class="panel panel-default">
					<div class="panel-heading preview">
						<%= image_tag podcast.thumbnail.url(:medium) %>
					</div>
					<div class="panel-body">
						<%= link_to podcast.title, podcast, class: "link-to-text" %><br />
						<span class="count-text"><%= podcast.episodes.count %> Episodes</span>
					</div>
				</div>
			</div>

		<% end %>

	</div>

</div>